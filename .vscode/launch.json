// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Scavengarr (CLI entrypoint, Port 7979)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/scavengarr/application/cli.py",
            "args": [
                "--host",
                "0.0.0.0",
                "--port",
                "7979",
                "--log-format",
                "console",
                "--log-level",
                "DEBUG"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "logToFile": true,
            "jinja": true
        }
    ]
}